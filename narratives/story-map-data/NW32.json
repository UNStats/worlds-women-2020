                            "altText": "",
                            "sizes": [
                                {
                                    "name": "tyler-nix-V3dHmb1MOXM-unsplash__1602482401205__w1200.jpg",
                                    "url": "https://www.arcgis.com/sharing/rest/content/items/cdf24c9c28b94260a4917cf5211cb321/resources/tyler-nix-V3dHmb1MOXM-unsplash__1602482401205__w1200.jpg",
