                            "altText": "",
                            "sizes": [
                                {
                                    "name": "clay-banks-GX8KBbVmC6c-unsplash__1602498451382__w1200.jpg",
                                    "url": "https://www.arcgis.com/sharing/rest/content/items/d965358e9e8d4f1ba249dadaa55ea703/resources/clay-banks-GX8KBbVmC6c-unsplash__1602498451382__w1200.jpg",
                                    "width": 1200
                                }
